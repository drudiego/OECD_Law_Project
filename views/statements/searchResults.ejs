<% layout('layouts/boilerplate') %>

    <div class="mb-5 ">
        <h1>Search Results</h1>

        <div class="col-12 ms-auto mb-3">
            <div>
                <a class="btn btn-info" href="/statements">Reset search</a>
            </div>

            <form action="/statements/search" method="GET">
                <div class="mb-3">
                    <label class="form-label fw-bold" for="searchTerm">Search</label>
                    <input class="form-control" id="searchTerm" type="text" name="searchTerm" value="<%= searchTerm%>"
                        placeholder="Search...">
                </div>
                <div class="container-fluid d-flex flex-row flex-wrap">

                    <% for (filter in filters) { %>

                        <select id="select-<%= filter %>" name="selectedFilters[<%= filter%>]" multiple
                            data-placeholder="<%= filters[filter].filterName%>" class="select form-select-sm col-6 p-1">
                            <% for (subfilter of filters[filter].subfilters) { %>
                                <option value="<%=subfilter %>" <%=selectedFilters && selectedFilters[filter] &&
                                    selectedFilters[filter].includes(subfilter) ? 'selected' : '' %>>
                                    <%= subfilter %>
                                </option>

                                <% } %>
                        </select>

                        <% } %>



                            <!-- <label class="form-label" for=<%=filter%> ><strong>
                                    <%= filters[filter].filterName%>
                                </strong> </label>
                            <select class="form-select" aria-label="Default select example" id="<%= filter%>"
                                name="selectedFilters[<%= filter%>]">
                                <option value="" selected></option>
                                <% for (subfilter of filters[filter].subfilters) { %>
                                    <option value="<%=subfilter %>">
                                        <%= subfilter %>
                                    </option>
                                    <% } %>
                            </select> -->


                </div>


                <button class="btn btn-info mt-3" type="submit">Search</button>
            </form>
        </div>

        <div class="container-fluid d-flex flex-row flex-wrap">
            <div class=" col-8">
                <% if (results.length> 0) { %>
                    <% for (let result of results){ %>
                        <div class="card mt-3 ">
                            <div class="card-header">
                                <%= result.item.location %>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= result.item.title %>
                                </h5>
                                <p class="card-text">
                                    <b>Actors : </b>
                                    <%= result.item.actors %>
                                </p>
                                <p class="card-text">
                                    <b>NCP Good Offices : </b>
                                    <%= result.item.NCPGoodOffices %>
                                </p>
                                <p class="card-text">
                                    <%= result.item.description %>
                                </p>
                                <a href="/statements/<%= result.item._id %>" class="btn btn-outline-primary">Show
                                    Statement</a>
                            </div>
                        </div>

                        <% } %>
                            <% } else { %>
                                <p>No results found.</p>
                                <% } %>
            </div>






        </div>
    </div>