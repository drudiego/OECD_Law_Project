<% layout('layouts/boilerplate') %>


    <div class="row">
        <h1 class="text-center">New Statement</h1>
        <div class="col-12">

            <form action="/statements" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="statement[title]" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Title can't be empty</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description (max 300 char)</label>
                    <textarea class="form-control" type="text" id="description" name="statement[description]"
                        maxlength="300" required></textarea>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Summary can't be empty</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="year">Year</label>
                    <input class="form-control" type="text" id="year" name="statement[year]" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Location can't be empty</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="summary">Summary</label>
                    <textarea class="form-control" type="text" id="summary" name="statement[summary]"
                        required></textarea>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Summary can't be empty</div>
                </div>

                <!-- //FILTERS START HERE -->

                <div class="container-fluid d-flex flex-row flex-wrap">
                    <% for (filter in filters) { %>
                        <div class="col-5 me-3 mb-3 accordion" id="accordion-<%= filter %>">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#collapse<%= filter %>" aria-expanded="false"
                                        aria-controls="collapse<%= filter %>">

                                        <%= filters[filter].filterName%>
                                    </button>

                                </h2>
                                <div id="collapse<%= filter %>" class="accordion-collapse collapse "
                                    data-bs-parent="#<%= filter %>">
                                    <div class="accordion-body">
                                        <% for (subfilter of filters[filter].subfilters) { %>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox"
                                                    name="statement[<%= filter%>]" value="<%=subfilter %>"
                                                    id="subfilter-<%=subfilter %>">
                                                <label class="form-check-label" for="subfilter-<%=subfilter %>">
                                                    <%= subfilter %>
                                                </label>
                                            </div>
                                            <% } %>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <% } %>
                </div>
                <!-- //FILTERS END HERE -->

                <div class="mb-3"><button class="btn btn-success">Add new Statement</button></div>

            </form>
            <a href="/statements">Back to All Statements</a>
        </div>
    </div>