<% layout('layouts/boilerplate') %>


    <div class="row">
        <h1 class="text-center">New Statement</h1>
        <div class="col-6 offset-3">

            <form action="/statements" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="statement[title]" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Title can't be empty</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="statement[location]" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Location can't be empty</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="summary">Summary</label>
                    <textarea class="form-control" type="text" id="summary" name="statement[summary]"
                        required></textarea>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Summary can't be empty</div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="actors">Actors</label>
                    <select class="form-select" aria-label="Default select example" id="actors" name="statement[actors]"
                        required>
                        <option value="" disabled selected>--Choose Actors--</option>
                        <option value="Investor/financial institutions">Investor/financial institutions</option>
                        <option value="SMEs">SMEs</option>
                        <option value="Parent Group/Company">Parent Group/Company</option>
                        <option value="State responsibility/involvement">State responsibility/involvement</option>

                    </select>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please select an actor</div>
                </div>
                <div class="mb-3"><button class="btn btn-success">Add new Statement</button></div>

            </form>
            <a href="/statements">Back to All Statements</a>
        </div>
    </div>