<% layout('layouts/boilerplate') %>


    <div class="row">
        <div class="col-8">
            <div class="card mb-3">

                <div class="card-body">
                    <h2 class="card-title">
                        <%= statement.title %>
                    </h2>
                    <% if(currentUser) { %>
                        <p class="card-text">
                            Included in the database by <%= statement.author.username %>
                        </p>
                        <% } %>
                            <p class="card-text">
                                <%= statement.summary %>
                            </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><strong>Location</strong>: <%= statement.location %>
                    </li>
                    <% for (filter in filters) {%>
                        <li class="list-group-item"><strong>
                                <%= filters[filter].filterName %>
                            </strong>: <%= statement[filter] %>
                        </li>
                        <% } %>

                </ul>
                <div class="card-body">
                    <% if(currentUser) { %>
                        <a class="btn btn-info" href="/statements/<%= statement._id %>/edit">Edit</a>

                        <form class="d-inline" action="/statements/<%= statement._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete Statement</button>
                        </form>
                        <% } %>
                            <div class="mt-3"><a href="/statements">Back to All Statements</a></div>
                </div>

            </div>
        </div>
    </div>