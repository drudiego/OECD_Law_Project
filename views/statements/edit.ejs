<% layout('layouts/boilerplate') %>



    <div class="row">
        <h1 class="text-center">Edit Statement</h1>
        <div class="col-6 offset-3">

            <form action="/statements/<%= statement._id %>?_method=PUT" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="statement[title]"
                        value="<%= statement.title  %>" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Title can't be empty</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="statement[description]"
                        maxlength="300" required><%= statement.description  %></textarea>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Summary can't be empty</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="year">Year</label>
                    <input class="form-control" type="text" id="year" name="statement[year]"
                        value="<%= statement.year  %>" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Location can't be empty</div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="summary">Summary</label>
                    <textarea class="form-control" type="text" id="summary" name="statement[summary]"
                        required><%= statement.summary  %></textarea>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Summary can't be empty</div>
                </div>

                <!-- //FILTERS START HERE -->
                <div class="container-fluid d-flex flex-row flex-wrap">
                    <% for (filter in filters) { %>
                        <div class="col-5 me-3 mb-3 accordion" id="accordion-<%= filter %>">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#collapse<%= filter %>" aria-expanded="false"
                                        aria-controls="collapse<%= filter %>">

                                        <%= filters[filter].filterName%>
                                    </button>

                                </h2>
                                <div id="collapse<%= filter %>" class="accordion-collapse collapse "
                                    data-bs-parent="#<%= filter %>">
                                    <div class="accordion-body">
                                        <% for (subfilter of filters[filter].subfilters) { %>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox"
                                                    name="statement[<%= filter%>]" value="<%=subfilter %>"
                                                    id="subfilter-<%=subfilter %>" <%=statement[filter] &&
                                                    statement[filter].includes(subfilter) ? 'checked' : '' %>>
                                                <label class="form-check-label" for="subfilter-<%=subfilter %>">
                                                    <%= subfilter %>
                                                </label>
                                            </div>
                                            <% } %>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <% } %>
                </div>
                <!-- //FILTERS END HERE -->

                <div class="mb-3"><button class="btn btn-info">Update Statement</button></div>

            </form>
            <a href="/statements/<%= statement._id %>">Back to Statement</a>
        </div>
    </div>