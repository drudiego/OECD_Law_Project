<% for (let statement of statements) { %>
    <div class="card mt-3 col-5 me-3">
        <div class="card-header">
            <%= statement.location %>
        </div>
        <div class="card-body">
            <h5 class="card-title">
                <%= statement.title %>
            </h5>
            <p><b>ISSUE</b></p>
            <p class="card-text">
                <%= statement.description %>
            </p>
            <a href="/statements/<%= statement._id %>" class="btn btn-outline-primary">Show Statement</a>
        </div>
    </div>
    <% } %>